    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - RazorDemo - <a asp-area="" asp-page="/Privacy">Privacy</a>
            <div>
                @{
                    var urlpath = Context.Request.Path;
                }
                @switch (urlpath.ToString().ToLower())
                {
                    case "/about":
                        <img src="~/images/travel_3.jpg" height="100" width="200">
                        break;

                    case "/contact":
                        <img src="~/images/champion-ant-man.jpg" height="100" width="200">
                        break;

                    case "/sport":
                        <img src="~/images/ted.jpg" height="100" width="200">
                        break;

                    case "/privacy":
                        <img src="~/images/Satya.jpg" height="100" width="200">
                        break;
                }


            </div>
        </div>
    </footer>


